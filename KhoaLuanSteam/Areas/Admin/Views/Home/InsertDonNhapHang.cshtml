@{
    ViewBag.Title = "InsertDonNhapHang";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

@model KhoaLuanSteam.Models.PHIEUNHAPHANG
<h2>Thêm phiếu nhập hàng</h2>
@using (Html.BeginForm("InsertDonNhapHang", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @if (ViewBag.Success != null)
        {
            <div id="thongBaoThanhCong" class="alert alert-success">@ViewBag.Success</div>
        }
        <div class="form-group">
            @Html.LabelFor(model => model.MaPhieuNhapHang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MaPhieuNhapHang, new { @class = "form-control", placeHolder = "" })
                @Html.ValidationMessageFor(model => model.MaPhieuNhapHang, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Loại</label>
            <div class="col-md-10">
                @Html.DropDownList("MaNCC", null, "Chọn Nhà Cung Cấp", new { @class = "form-control", style = "height: 35px" })
                @Html.ValidationMessageFor(model => model.MaNCC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MaNV, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MaNV, new { @class = "form-control", placeHolder = "" })
                @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
            </div>
        </div>
       
        <div class="form-group">
            @Html.LabelFor(model => model.TongSL, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TongSL, new { @class = "form-control", placeHolder = "" })
                @Html.ValidationMessageFor(model => model.TongSL, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TongSL, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TongSL, new { @class = "form-control", placeHolder = "" })
                @Html.ValidationMessageFor(model => model.TongSL, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TongTien_NH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TongTien_NH, new { @class = "form-control", placeHolder = "" })
                @Html.ValidationMessageFor(model => model.TongTien_NH, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<div style="text-transform: uppercase;
    font-weight: bold;">
    @Html.ActionLink("Trở về", "AD_ShowAllPhieuNhapHang")
</div>

