@{
    ViewBag.Title = "ThanhToan";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

@using KhoaLuanSteam.Models;
@model List<KhoaLuanSteam.Models.GioHang>
@section jsFooter{
    <script src="/Content/Client/js/controller/cartController.js"></script>
}
<style>
    .vertical-align{
        display: table-cell;
        vertical-align: middle !important;
    }
</style>
<h2 style="margin-bottom: 20px; margin-top: 15px; margin-left: 26px;">Thông tin đặt hàng</h2>
@if (Model.Count > 0)
{
    <table id="cart" class="table table-condensed" style="margin-left: 26px;">
        <thead>
            <tr>
                <th style="width:50%" class="text-center">Sản phẩm</th>
                <th style="width:10%" class="text-center">Giá</th>
                <th style="width:8%" class="text-center">Số lượng</th>
                <th style="width:32%" class="text-center">Thành tiền</th>
                @* <th style="width:22%" class="text-center">Thành tiền</th>
                <th style="width:10%" class="text-center"></th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td data-th="Product">
                        <div class="row">
                            <div class="col-sm-2 hidden-xs"><img src="~/HinhAnhSach/@item.sanpham.HinhAnh" alt="@item.sanpham.HinhAnh" class="img-responsive" style="width: 150px; height: auto; margin-left: 31px;" /></div>
                            <div class="col-sm-10">
                                <h4 class="nomargin" style="margin-left: 29%;font-size: 19px; font-weight: bold;">@item.sanpham.TenSanPham</h4>
                            </div>
                        </div>
                    </td>
                    <td data-th="Price" class="vertical-align">
                        @if (@item.sanpham.GiamGia <= 0)
                        {
                            <span>
                                @item.sanpham.GiaSanPham.GetValueOrDefault(0).ToString("N0") VND
                            </span>
                        }
                        else
                        {
                            <span>
                                @Html.Action("giasachgiam", "Product", new { @masanpham = @item.sanpham.MaSanPham })
                            </span>

                        }
                    </td>
                    <td data-th="Quantity" class="text-center vertical-align">
                        <input type="number" style="border: none; text-align: center;" class="txtQuantity" readonly="readonly" data-id="@item.sanpham.MaSanPham" value="@item.iSoLuong">
                    </td>
                    <td data-th="Subtotal" class="text-center vertical-align">
                        @if (@item.sanpham.GiamGia <= 0)
                        {
                            <span>
                                @((item.sanpham.GiaSanPham.GetValueOrDefault(0) * item.iSoLuong).ToString("N0")) VND
                            </span>
                        }
                        else
                        {
                            <span>

                                @* @(((item.sanpham.GiaSanPham.GetValueOrDefault(0) - (item.sanpham.GiaSanPham.GetValueOrDefault(0) * item.sanpham.GiamGia.GetValueOrDefault(0))) * item.iSoLuong).ToString("N0")) VND *@
                                @(((item.sanpham.GiaSanPham.GetValueOrDefault(0) * (1 - (item.sanpham.GiamGia.GetValueOrDefault(0) / 100))) * item.iSoLuong).ToString("N0")) VND
                            </span>

                        }

                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            @*<tr class="visible-xs">
                    <td class="text-center"><strong>Tổng cộng: @String.Format("{0:0,0}", ViewBag.Total) VND</strong></td>
                </tr>*@
            <tr>
                <td style="padding-left: 46px;">
                    <a href="/Cart/Index" class="btn btn-primary"><i class="fa fa-angle-left"></i> Trở về</a>
                </td>
                <td colspan="2" class="hidden-xs"></td>
                <td class="hidden-xs vertical-align row">
                    <span class="col-6">Tổng cộng: </span>
                    <strong class="col-6" style="font-size: 15px;">
                        @String.Format("{0:0,0}", ViewBag.Total) VND
                    </strong>
                </td>
                <td>@*<a href="#" class="btn btn-success btn-block">Đặt hàng <i class="fa fa-angle-right"></i></a>*@</td>
            </tr>
        </tfoot>
    </table>


    @Html.Action("ThongTinKhachHang", "Cart")

}
else
{
    <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
    <br />
    <a href="/Home/SanPham" style="margin-top: 20px;" class="btn btn-warning"> Tiếp tục mua hàng</a>
}

<style>
    .product-price {
        font-size: 13px;
        line-height: 1.5;
        color: #212529;
        font-weight: 100;
    }
</style>