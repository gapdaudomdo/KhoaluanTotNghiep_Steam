@model IEnumerable<KhoaLuanSteam.Models.THONGTINSANPHAM>

@foreach (var item in Model)
{
    <a href="/Product/ChiTietSP/@item.MaSanPham" class="latest-product__item">
        <div class="latest-product__item__pic">
            <img src="/HinhAnhSach/@item.HinhAnh" alt="@item.TenSanPham" title="@item.TenSanPham">
        </div>
        <div class="latest-product__item__text">
            <h6>@(item.TenSanPham.Length > 26 ? item.TenSanPham.Substring(0, 22) + "..." : item.TenSanPham)</h6>
                <span>@item.GiaSanPham.Value.ToString("N0") đ</span>
        </div>
    </a>
}